@model IEnumerable<MvcPeliculasApiAWS.Models.Pelicula>

@{
    ViewData["Title"] = "PeliculasActor";
}

<h1>PeliculasActor</h1>
<form method="post">
    <label>Indtroduzca un actor</label>
    <input type="text" name="actor" class="form-control"/>
    <button>Enviar</button>
</form>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdPelicula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Argumento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Foto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Actores)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Youtube)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPelicula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Argumento)
                    </td>
                    <td>
                        <img src="@item.Foto" class="w-25 y-25" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Actores)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Youtube)
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Peliculas" asp-route-id="@item.IdPelicula" class="btn btn-info">Details</a>
                        <a asp-action="UpdatePelicula" asp-controller="Peliculas" asp-route-id="@item.IdPelicula" class="btn btn-warning">Update</a>
                        <a asp-action="DeletePelicula" asp-controller="Peliculas" asp-route-id="@item.IdPelicula" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
